<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FlixHub" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_300</item>
        <item name="colorPrimaryVariant">@color/red_700</item>
        <item name="colorOnPrimary">@color/gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_300</item>
        <item name="colorSecondaryVariant">@color/blue_300</item>
        <item name="colorOnSecondary">@color/gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/gray</item>
    </style>

    <style name="MyPopupMenu" parent="@style/Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">@color/blue_300</item>
        <item name="android:background">@color/gray</item>
        <item name="android:textColor">@color/colorTextTertiary</item>
        <item name="textColorAlertDialogListItem">@color/colorTextTertiary</item>
    </style>
</resources>